{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalPassThroughEnv": [
  ],
  "globalEnv": [
    "NODE_ENV",
    "DTS_ONLY",
    "API_DTS_ONLY",

    "NEXT_PUBLIC_MAIN_URL",
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_API_URL",
    "APP_URL",

    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",

    "PASSWORD_SALT",
    "NEXTAUTH_SECRET",

    "RESEND_API_KEY",

    "DATABASE_URL",

    "NEXT_PUBLIC_MAIN_URL"
  ],
  "remoteCache": {
    "signature": true
  },
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {},
    "format": {
    },
    "format:check": {
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "test": {
    },
    "test:watch": {
      "cache": false
    },
    "test:coverage": {
      "cache": false
    }
  }
}