{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**",
        "node_modules/.prisma/**"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {},
    "format": {
    },
    "format:check": {
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "test": {
    },
    "test:watch": {
      "cache": false
    },
    "test:coverage": {
      "cache": false
    }
  }
}