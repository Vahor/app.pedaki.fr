{
  "name": "@pedaki/settings",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "publishConfig": {
    "directory": "dist"
  },
  "scripts": {
    "lint": "eslint .",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "typecheck": "tsc --noEmit",

    "build": "tsup && copyfiles \"./package.json\" \"dist\""
  },
  "devDependencies": {
    "@pedaki/db": "workspace:*"
  },
  "prettier": "@pedaki/prettier-config"
}
