{
  "name": "app.pedaki.fr",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/PedakiHQ/app.pedaki.fr",
  "homepage": "https://app.pedaki.fr",
  "author": "Nathan David <me@vahor.fr>",
  "keywords": [
    "pedaki"
  ],
  "scripts": {
    "start": "dotenv -- turbo run start",
    "build": "dotenv -- turbo run build",
    "build:watch": "dotenv -- turbo run build:watch",
    "test": "cross-env NODE_ENV=test dotenv -e .env.test -c -- turbo run test",
    "test:coverage": "NODE_ENV=test dotenv -e .env.test -c -- turbo run test:coverage",
    "test:watch": "NODE_ENV=test dotenv -e .env.test -c -- turbo run test:watch",
    "dev": "dotenv -- turbo run dev",
    "lint": "cross-env SKIP_ENV_VALIDATION=true turbo run lint",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "clean": "turbo run clean && rimraf node_modules",
    "check": "cross-env SKIP_ENV_VALIDATION=true turbo typecheck lint format:check test"
  },
  "devDependencies": {
    "@pedaki/eslint-config": "^0.1.1",
    "@pedaki/prettier-config": "^0.0.5",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/fs-extra": "^11.0.3",
    "@types/node": "^18.18.0",
    "@vitest/coverage-v8": "^0.34.6",
    "cpy": "^10.1.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "latest",
    "esbuild-plugin-file-path-extensions": "^1.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "rimraf": "latest",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=18.17.0 <19.0.0",
    "pnpm": ">=8.0.0",
    "yarn": "use-pnpm",
    "npm": "use-pnpm"
  },
  "packageManager": "pnpm@8.7.6"
}