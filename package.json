{
  "name": "app.pedaki.fr",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/PedakiHQ/app.pedaki.fr",
  "homepage": "https://app.pedaki.fr",
  "author": "Nathan David <me@vahor.fr>",
  "keywords": [
    "pedaki"
  ],
  "scripts": {
    "start": "dotenv -- turbo run start",
    "build": "dotenv -- turbo run build",
    "build:watch": "dotenv -- turbo run build:watch",
    "test": "NODE_ENV=test dotenv -e .env.test -c -- vitest",
    "test:coverage": "NODE_ENV=test dotenv -e .env.test -c -- vitest --coverage",
    "test:watch": "NODE_ENV=test dotenv -e .env.test -c -- vitest --watch",
    "dev": "dotenv -- turbo run dev",
    "lint": "cross-env SKIP_ENV_VALIDATION=true turbo run lint",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "clean": "turbo run clean && rimraf node_modules",
    "check": "cross-env SKIP_ENV_VALIDATION=true turbo typecheck lint format:check test",
    "prepare": "husky install"
  },
  "dependencies": {
    "husky": "^9.0.11"
  },
  "devDependencies": {
    "@pedaki/eslint-config": "^0.5.2-beta.11",
    "@pedaki/prettier-config": "^0.5.2-beta.11",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.19.22",
    "@vitest/coverage-v8": "^1.3.1",
    "cpy": "^11.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "latest",
    "esbuild": "^0.20.1",
    "esbuild-plugin-file-path-extensions": "^2.0.0",
    "execa": "^8.0.1",
    "expect-type": "^0.18.0",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.2",
    "rimraf": "latest",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^8.0.2",
    "turbo": "^1.12.5",
    "typescript": "5.3",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.17.0 <19.0.0",
    "pnpm": ">=8.0.0",
    "yarn": "use-pnpm",
    "npm": "use-pnpm"
  },
  "packageManager": "pnpm@8.7.6"
}
